{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "isolatedModules": false,
    "lib": ["ES2022"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
